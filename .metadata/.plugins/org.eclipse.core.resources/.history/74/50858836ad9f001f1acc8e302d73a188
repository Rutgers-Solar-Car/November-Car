#include <board_specific_params.h>
#include "main.h"

#define CON_BATT_ID 1
#define CON_MOTOR_ID 2
#define DUMMY_ID 3

static board_param_t hvbps_parameters[];

board_param_t* get_params() {

	return hvbps_parameters;

};

static void impl_param_handler(board_param_t* param) {
	switch (param->ID) {
	case CON_BATT_ID:
		HAL_GPIO_WritePin(CON_BATT_G_GPIO_Port, CON_BATT_G_Pin, param->bval);

	break;

	default:
		//no-op
	break;
	}
}

void param_handler() {
	for (int i = 0; i < NUM_PARAMS; i++) {
		if (!hvbps_parameters[i].has_change) {
			continue;
		}
		impl_param_handler(&hvbps_parameters[i]);
		hvbps_parameters[i].has_change = false;
	}
}

static board_param_t hvbps_parameters[3] = {
		{
			.ID = CON_BATT_ID,
			.ival = 0,
			.type = TO_RECEIVE,
			.to_send = false,
			.timestamp = 0
		},
		{
			.ID = CON_MOTOR_ID,
			.bval = false,
			.type = TO_RECEIVE,
			.to_send = false,
			.timestamp = 0,
			.check_stale = false
		},
		{
			.ID = DUMMY_ID,
			.ival = 0,
			.type = TO_SEND,
			.to_sen = false,
			.timestamp = 0,
			.check_stale = false
		}

	};
