#ifndef BOARD_PARAMS_H
#define BOARD_PARAMS_H

#include <stdint.h>
#include <stdbool.h>
#include "can.h"

typedef struct board_param_impl {
	uint8_t type;
	bool to_send;
	uint32_t timestamp;
	bool check_stale;
	bool stale;
	void (*param_function)(void*);
} board_param_impl_t;

typedef struct board_param {
	uint16_t ID;
	union {
		int32_t ival;
		bool bval;
		float fval;
	};
	board_param_impl_t impl;
	uint8_t type;
	bool to_send;
	uint32_t timestamp;
	bool stale;
	bool check_stale;
	void (*param_function)(struct board_param*);
} board_param_t;

enum {
	TO_SEND = 0,
	TO_RECEIVE
};

can_data_t convert_message(board_param_t* param);

void check_staleness(board_param_t** params, uint16_t num_params);

#endif
